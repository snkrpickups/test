    window.onload = () => {
      setTimeout(() => {
        document.getElementById('logo').classList.add('active');
      }, 500);  // Delay before moving to center
      setTimeout(() => {
        window.location.href = 'login.html'; // Redirect to login page after animation
      }, 3000);  // Adjust time for redirect
    };
  </script>
